---
import logo from "../assets/logo.webp";
---

<div
  class="bg-white dark:bg-gray-800 rounded-xl shadow-2xl max-w-4xl w-full p-8 transition-all duration-300 animate-fade-in md:h-auto min-h-fit"
>
  <div class="flex flex-col md:flex-row items-center">
    <div
      class="lg:items-center md:w-1/3 text-center mb-8 md:mb-0 lg:align-middle"
    >
      <img
        loading="eager"
        src={logo.src}
        alt="Jack Stirzaker"
        class="rounded-full w-48 h-48 mx-auto mb-4 border-4 border-blue-300 dark:border-blue-700 transition-transform duration-300 hover:scale-105"
      />
      <h1 class="text-3xl font-bold text-blue-400 dark:text-white mb-2">
        Jack Stirzaker
      </h1>
      <ul class="flex justify-center mt-5 space-x-5">
        <li>
          <a
            href="https://github.com/jackstirzaker"
            target="_blank"
            class="text-gray-500 hover:text-gray-900 dark:hover:text-white dark:text-gray-400"
            title="GitHub"
          >
            <svg
              class="w-8 h-8"
              fill="currentColor"
              viewBox="0 0 24 24"
              aria-hidden="true"
              aria-label="GitHub"
            >
              <path
                fill-rule="evenodd"
